// {{ ansible_managed }}

logging {
    channel update_debug {
        file "{{ bind9_log_dir }}/update.log" versions 3 size 100k;
        severity        debug;
        print-severity  yes;
        print-time      yes;
    };

    channel security_info {
        file "{{ bind9_log_dir }}/security.log" versions 3 size 100k;
        severity        info;
        print-severity  yes;
        print-time      yes;
    };

    channel bind_log {
        file "{{ bind9_log_dir }}/bind.log" versions 3 size 1m;
        severity        info;
        print-category  yes;
        print-severity  yes;
        print-time      yes;
    };

    category default {
        bind_log;
    };
    category lame-servers {
        null;
    };
    category update {
        update_debug;
    };
    category update-security {
        update_debug;
    };
    category security {
        security_info;
    };

};

